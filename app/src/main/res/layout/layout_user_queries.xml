<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewprofileimageOwnUserQueries"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_account_circle_black" />
                <TextView
                    android:id="@+id/textViewOwnUserQueriesName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TechBlog User"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Queries"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:background="#FF781B3B"/>

            <ProgressBar
                android:id="@+id/progressBarOwnUserQueries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/textViewShowErrorQueries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp"
                android:text="No Queries are  there ... Please add some"
                android:textColor="#000000"
                android:textSize="15dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewOwnUserQueries"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>
